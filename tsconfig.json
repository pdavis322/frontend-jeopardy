{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "exclude": ["node_modules"],
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.ts", "*.d.ts"],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "lib": ["ES2017.Object", "ES2015", "dom"],
    "skipLibCheck": true
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
